<%- include header %>
<div class="container">
      <div class="blog-header">
        <h1 class="blog-title">好人一生平安</h1>
        <p class="lead blog-description">写完记得保存哦，棒棒哒</p>
      </div>
	   <div class="row">
        <form class="form-horizontal" method="post">
          <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="formGroupInputLarge">标题：</label>
            <div class="col-sm-10">
              <input class="form-control" type="text" id="formGroupInputLarge" placeholder="请写一个比较诗意的标题" name="title">
            </div>
          </div>
          <div class="form-group form-group-lg">
            <label class="col-sm-2 control-label" for="formGroupInputLarge">内容：</label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="3" name="post"></textarea>
            </div>
          </div>
          <input type="submit" value="提交">
        </form>

     </div>
</div>
<%- include footer %>